{
  "manifest_version": 2,

  "name": "My Extension",
  "description": "This extension is a starting point to create a real Chrome extension",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo-rocket.png",
    "48": "logo-rocket.png",
    "128": "logo-rocket.png"
  },
  "permissions": [],
  "content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["bundle.js"]
  }
]
}
